#include <winver.h>

VS_VERSION_INFO VERSIONINFO

FILEVERSION ${gadmin_VERSION_MAJOR},${gadmin_VERSION_MINOR},${gadmin_VERSION_PATCH},0
PRODUCTVERSION ${gadmin_VERSION_MAJOR},${gadmin_VERSION_MINOR},${gadmin_VERSION_PATCH},0
FILEFLAGSMASK 0x3fL

#ifdef _DEBUG
FILEFLAGS 0x1L
#else
FILEFLAGS 0x0L
#endif

FILEOS 0x40004L
FILETYPE 0x2L
FILESUBTYPE 0x0L

BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
            VALUE "FileDescription", "Plugin simplifying the work of administrators on the Gambit-RP"
            VALUE "FileVersion", "${gadmin_VERSION}"
            VALUE "LegalCopyright", "Copyright (C) 2023-2025 The Contributors"
            VALUE "OriginalFilename", "gadmin.dll"
            VALUE "ProductName", "GAdmin"
            VALUE "ProductVersion", "${gadmin_VERSION}"
            VALUE "LicenseName", "GNU General Public License v3 (GPLv3)"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x409, 1251
    END
END
